{
  "name": "simple-input-formatter",
  "version": "0.3.1",
  "description": "Minimalist JavaScript to make form input formatting simple",
  "bugs": {
    "url": "https://github.com/jon49/simple-input-formatter/issues"
  },
  "homepage": "https://github.com/jon49/simple-input-formatter#readme",
  "main": "index.js",
  "scripts": {
    "start": "npx esbuild --watch --outfile=docs/index.js --servedir=docs --format=iife index.js",
    "build": "npx minify index.js > index.min.js && cp index.js docs/index.js"
  },
  "author": "Jon Nyman",
  "license": "MIT",
  "keywords": [
    "input",
    "form",
    "html",
    "format",
    "simple",
    "currency",
    "customelement",
    "custom-element",
    "webcomponent",
    "web-component"
  ],
  "devDependencies": {
    "esbuild": "^0.19.8",
    "minify": "^10.5.2"
  }
}
